<scene>
	<camera aspect="1.0" width="900" samples="32"/>
	<position x="1.0" y="1.0" z="-1.0" />
	<lookat x="1.0" y="1.0" z="1.0" />
	<up x="0.0" y="1.0" z="0.0" />
	<tracer depth="20" bias="0.0005"/>

	<lambertian id="red" ambientR="0.1" ambientG="0.0" ambientB="0.0" diffuseR="0.65" diffuseG="0.05" diffuseB="0.05" specularR="0.1" specularG="0.1" specularB="0.1" shininess="10.0"/>
	<lambertian id="green" ambientR="0.0" ambientG="0.1" ambientB="0.0" diffuseR="0.12" diffuseG="0.45" diffuseB="0.15" specularR="0.1" specularG="0.1" specularB="0.1" shininess="10.0"/>
	<lambertian id="white" ambientR="0.1" ambientG="0.1" ambientB="0.1" diffuseR="0.73" diffuseG="0.73" diffuseB="0.73" specularR="0.1" specularG="0.1" specularB="0.1" shininess="10.0"/>
	<textured id="earth" path="assets/textures/earthmap.jpg" shininess="10.0"/>
	<normalmapped id="normalMat" ambientR="0.0" ambientG="0.0" ambientB="0.1" diffuseR="0.3" diffuseG="0.3" diffuseB="0.7" specularR="0.5" specularG="0.5" specularB="0.5" shininess="32.0" normalmap="assets/textures/normal_tex.png"/>
	<mirror id="mirror" albedoR="1.0" albedoG="1.0" albedoB="1.0" />
	<glass id="glass" albedoR="0.8" albedoG="0.9" albedoB="1.0" ior="1.5" />

	<quad material="red" min="0,0,0" max="0,2,2" axis="0" value="0.0"/>
	<quad material="green" min="2,0,0" max="2,2,2" axis="0" value="2.0"/>
	<quad material="white" min="0,0,2" max="2,2,2" axis="2" value="2.0"/>
	<quad material="white" min="0,0,0" max="2,0,2" axis="1" value="0.0"/>
	<quad material="white" min="0,2,0" max="2,2,2" axis="1" value="2.0"/>

	<!-- Esfera de la Tierra (centro) -->
	<sphere material="earth" cx="0.9" cy="0.75" cz="1.0" radius="0.3"/>
	
	<!-- Esfera con normal mapping (derecha) -->
	<sphere material="normalMat" cx="1.6" cy="0.75" cz="1.0" radius="0.3"/>
	
	<!-- Malla icosaédrica (izquierda) -->
	<mesh path="assets/ico/icos.obj" material="normalMat" translateX="0.3" translateY="0.4" translateZ="0.8" scaleX="0.3" scaleY="0.3" scaleZ="0.3"/>

	<!-- Esfera reflectante flotante -->
	<sphere material="mirror" cx="1.0" cy="1.3" cz="1.0" radius="0.15"/>

	<!-- Esfera de cristal pequeña -->
	<sphere material="glass" cx="0.4" cy="0.5" cz="0.7" radius="0.12"/>

	<!-- Cilindro delgado -->
	<cylinder cx="1.4" cy="0.4" cz="0.8" y0="0.0" y1="0.8" radius="0.08" material="green"/>

	<!-- Esfera blanca en la esquina -->
	<sphere material="white" cx="1.7" cy="0.4" cz="0.6" radius="0.1"/>

	<point x="1.0" y="1.8" z="1.0" r="1.0" g="1.0" b="1.0"/>
	<point x="0.2" y="1.5" z="0.5" r="1.0" g="0.8" b="0.6"/>
	<point x="0.5" y="1.8" z="0.5" r="0.6" g="0.6" b="0.6"/>
</scene>